{
  "name": "git-law",
  "version": "0.1.0",
  "license": "GPL-3.0-only",
  "type": "module",
  "main": "dist/exports.js",
  "scripts": {
    "cli": "tsx src/cli/cli.ts",
    "build": "tsc --build"
  },
  "bin": {
    "git-law": "./bin/cli.js"
  },
  "files": [
    "./bin",
    "./dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/exports.js",
      "require": "./dist/exports.js"
    },
    "./configs/*": {
      "import": "./dist/built-in/configs/*.js"
    },
    "./rules/*": {
      "import": "./dist/built-in/rules/*.js"
    },
    "./actions/*": {
      "import": "./dist/built-in/rules/*"
    }
  },
  "devDependencies": {
    "@types/lodash": "^4.17.13",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.8.7",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.8",
    "octokit": "^4.0.2",
    "yaml": "^2.6.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  }
}
