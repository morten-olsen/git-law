{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "./tsconfig.*",
        "../../pnpm-lock.yaml"
      ]
    },
    "test": {
      "cache": false
    },
    "clean": {},
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    }
  }
}
